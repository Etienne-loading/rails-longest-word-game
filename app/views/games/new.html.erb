<div class="container">
  <h1 class="title-big">🉐 New game 🉐</h1>
  <div class="d-flex">
    <% @sample.each do |letter| %>
    <div class="letter-blue"><%= letter %></div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <input class="m-5" type="text" name="input" placeholder="What is your answer?">
    <input type="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @sample %>
  </form>
</div>
